{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "region": {
      "type": "string",
      "default": ""
    },
    "caCert": {
      "type": "string",
      "pattern": "^$|^\\s*-----BEGIN CERTIFICATE-----(?:.|\\s)*-----END CERTIFICATE-----\\s*$"
    },
    "caCertMount": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "allowAdditionalProperties": false
      }
    },
    "caCertSecret": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "caCertKey": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "disableAllCertificateTrust": {
      "type": "boolean",
      "default": false
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "existingName": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "platformAuthSecret": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "credentialReferencesSecret": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "credentialReferences": {
      "type": "object"
    },
    "acceptAppRisk": {
      "type": "boolean"
    },
    "acceptCode": {
      "type": "boolean"
    },
    "acceptIaC": {
      "type": "string",
      "oneOf": [
        {
          "maxLength": 0
        },
        {
          "pattern": "^[a-z,\\s]+$"
        }
      ]
    },
    "acceptCustomPrTemplates": {
      "type": "boolean"
    },
    "acceptLargeManifests": {
      "type": "boolean"
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        },
        "path": {
          "type": "string",
          "default": "/"
        },
        "pathType": {
          "type": "string",
          "enum": [
            "Prefix",
            "Exact",
            "ImplementationSpecific"
          ]
        },
        "hostname": {
          "type": "string"
        },
        "extraHosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "pathType": {
                "type": "string",
                "enum": [
                  "Prefix",
                  "Exact",
                  "ImplementationSpecific"
                ]
              },
              "allowAdditionalProperties": false
            }
          }
        },
        "extraPaths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "extraTls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hosts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "secretName": {
                "type": "string"
              }
            }
          }
        },
        "existingSecret": {
          "type": "string"
        },
        "tls": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "secret": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string"
                },
                "cert": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "highAvailabilityMode": {
      "replicaCount": {
        "type": "integer",
        "minimum": 2,
        "maximum": 4
      }
    },
    "additionalProperties": false
  },
  "additionalProperties": true
}
